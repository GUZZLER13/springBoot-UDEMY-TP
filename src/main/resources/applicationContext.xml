<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="controller" class="com.mycompany.dvdstore.controller.MovieController">
        <property name="movieServiceInterface" ref="service"/>
    </bean>

    <bean id="service" class="com.mycompany.dvdstore.service.DefaultMovieService">
        <property name="movieRepositoryInterface" ref="repository"/>
    </bean>

    <bean id="repository" class="com.mycompany.dvdstore.repository.FileMovieRepository">
        <property name="file" value="C:\\temp\\movies.csv"/>
    </bean>

</beans>